
    <!-- res/drawable/ic_with_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Rounded background (adjust radius as needed) -->
<item>
  <shape android:shape="rectangle">
    <solid android:color="#50FFFFFF" /> <!-- Black with 50% alpha -->
    <corners android:radius="10dp" /> <!-- Matches your 120 value -->
    <size android:width="48dp" android:height="48dp" /> <!-- Larger than icon -->
  </shape>
</item>

<item
    android:gravity="center"
    android:width="24dp"
    android:height="24dp">
  <vector
      android:width="48dp"
      android:height="48dp"
      android:viewportWidth="960"
      android:viewportHeight="960"
      android:autoMirrored="true">
    <path
        android:fillColor="@android:color/white"
        android:pathData="M400,880L0,480L400,80L456,137L113,480L456,823L400,880Z"/>
  </vector>
</item>
</layer-list>
