<!-- res/drawable/ic_with_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded background (adjust radius as needed) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF" /> <!-- Black with 50% alpha -->
            <corners android:radius="10dp" /> <!-- Matches your 120 value -->
            <size android:width="60dp" android:height="60dp" /> <!-- Larger than icon -->
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_info"
        android:gravity="center"
        android:width="24dp"
        android:height="24dp"/>
</layer-list>